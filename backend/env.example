# Backend Orchestrator Service Environment Configuration
# Copy this file to .env and update the values

# Backend Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000

# CORS Configuration
FRONTEND_URL=http://localhost:3000

# Environment
PYTHON_ENV=development

# Microservice URLs - Backend orchestrates requests to these services
AUTH_API_URL=http://localhost:8003
DATABASE_API_URL=http://localhost:8002
STORAGE_API_URL=http://localhost:8001

# HTTP Client Configuration
HTTP_TIMEOUT=30.0
MAX_RETRIES=3