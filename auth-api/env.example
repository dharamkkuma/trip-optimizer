# Auth API Environment Configuration

# Application Settings
NODE_ENV=development
APP_NAME=Auth API
APP_VERSION=1.0.0

# Server Configuration
PORT=8003
API_HOST=0.0.0.0
API_PORT=8003

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
MONGODB_URL=mongodb://admin:password@mongodb:27017/trip_optimizer?authSource=admin
MONGODB_DATABASE=trip_optimizer

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8000,http://localhost:8001,http://localhost:8002,http://frontend:3000,http://backend:8000,http://storage-api:8001,http://database-api:8002

# Password Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend URL for redirects
FRONTEND_URL=http://localhost:3000